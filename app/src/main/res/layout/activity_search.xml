<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="me.sweetll.tucao.business.search.SearchActivity">

    <data>
        <variable
            name="viewModel"
            type="me.sweetll.tucao.business.search.viewmodel.SearchViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout_height="25dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_left"
                android:scaleType="centerInside"
                android:onClick="@{viewModel::onClickBack}"/>

            <EditText
                android:id="@+id/searchEdit"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/bg_round_white_rectangle"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColor="@color/primary_text"
                android:textSize="15sp"
                android:text="@={viewModel.searchText}"
                android:hint="输入关键词"
                android:textColorHint="@color/hint_text"/>

            <ImageView
                android:id="@+id/searchImg"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search"
                android:scaleType="centerInside"
                android:onClick="@{viewModel::onClickSearch}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="共:274个相关结果"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_white_rectangle_grey_border"
                android:gravity="center"
                android:onClick="@{viewModel::onToggleChannelFilter}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部分类"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_keyboard_arrow_down"
                    android:scaleType="centerInside"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_white_rectangle_grey_border"
                android:gravity="center"
                android:onClick="@{viewModel::onToggleOrderFilter}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_keyboard_arrow_down"
                    android:scaleType="centerInside"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_300"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/searchRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/item_video"/>
            </android.support.v4.widget.SwipeRefreshLayout>

            <!--遮罩层-->
            <View
                android:id="@+id/maskView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mask"
                tools:visibility="visible"
                android:visibility="invisible"
                android:onClick="@{viewModel::onClickMask}"/>

            <!--分类选择项-->
            <LinearLayout
                android:id="@+id/channelDropLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                tools:visibility="visible"
                android:visibility="invisible">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="全部分类"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:tag="19"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="动画"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:tag="20"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="音乐"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:tag="21"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="游戏"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:tag="22"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="三次元"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:tag="23"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="影剧"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey_300"/>

                <TextView
                    android:tag="24"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="新番"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:onClick="@{viewModel::onFilterChannel}"/>

            </LinearLayout>

            <!--排序选择项-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</layout>
