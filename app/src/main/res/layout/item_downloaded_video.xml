<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:padding="16dp"
    android:elevation="2dp"
    tools:paddingTop="25dp"
    android:background="@drawable/bg_round_white_rectangle_grey_border"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        tools:visibility="visible"
        android:visibility="gone"
        android:theme="@style/PinkCheckBox"
        tools:checked="false"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
                      android:id="@+id/img_thumb"
                      android:layout_width="160dp"
                      android:layout_height="90dp"
                      android:scaleType="fitXY"
                      android:layout_marginRight="8dp"
                      android:layout_marginEnd="8dp"/>

        <TextView
                     android:id="@+id/text_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/img_thumb"
                     android:layout_toEndOf="@+id/img_thumb"
                     android:layout_marginTop="8dp"
                     android:maxLines="2"
                     android:ellipsize="end"
                     tools:text="[日本/SP]朝本年末SP 大叔的爱 [日本/SP]朝本年末SP 大叔的爱"
                     android:textSize="15sp"
                     android:textColor="@color/secondary_text"/>

        <TextView
                     android:id="@+id/text_size"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignLeft="@+id/text_title"
                     android:layout_alignStart="@+id/text_title"
                     android:layout_marginTop="64dp"
                     tools:text="29.1MB"
                     android:textSize="14sp"
                     android:textColor="@color/primary_text"/>

        <LinearLayout
                         android:id="@+id/linear_detail"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true"
                         android:layout_marginTop="62dp"
                         android:gravity="center_vertical">

                         <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="视频详情"
                         android:textSize="14sp"
                         android:textColor="@color/primary_text"/>

                         <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:src="@drawable/ic_keyboard_arrow_right"/>

                         </LinearLayout>

    </RelativeLayout>


</LinearLayout>
